<div class="page-header">
  <h3>Course #<%= @course.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @course.name %></dd>

      <dt>Dept code</dt>
      <dd><%= @course.dept_code %></dd>

      <dt>Department</dt>
      <dd><%= @course.department %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/courses" class="btn btn-primary">
        Back
      </a>
      <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_course/<%= @course.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Course has many slots -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Slots
      </li>

      <% @course.slots.each do |slot| %>
        <li class="list-group-item">
          <a href="/slots/<%= slot.id %>">
            <%= slot.schedule_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/slots/<%= slot.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/slots/<%= slot.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_slot/<%= slot.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_slot" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for schedule_id -->
      <div class="form-group">
        <label for="schedule_id" class="control-label">
          Schedule
        </label>

        <%= select_tag(:schedule_id, options_from_collection_for_select(Schedule.all, :id, :user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for course_id -->
      <input type="hidden" name="course_id" value="<%= @course.id %>">

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="">
      </div>

      <!-- Label and input for quarter -->
      <div class="form-group">
        <label for="quarter" class="control-label">
          Quarter
        </label>

        <input type="text" id="quarter" name="quarter" placeholder="Quarter" class="form-control" value="">
      </div>

      <!-- Label and input for completed -->
      <div class="checkbox">
        <label for="completed">
          <input type="checkbox" id="completed" name="completed" value="1" <%= "checked" if @slot.completed %>>
          Completed
        </label>
      </div>

      <!-- Label and input for grade -->
      <div class="form-group">
        <label for="grade" class="control-label">
          Grade
        </label>

        <input type="text" id="grade" name="grade" placeholder="Grade" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Slot
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Course has many schedules -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Schedules
      </li>

      <% @course.schedules.each do |schedule| %>
        <li class="list-group-item">
          <a href="/schedules/<%= schedule.id %>">
            <%= schedule.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/schedules/<%= schedule.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/schedules/<%= schedule.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_schedule/<%= schedule.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
