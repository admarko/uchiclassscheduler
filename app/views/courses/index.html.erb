<div class="page-header">
  <h1>
    Course Catalog
  </h1>
</div>


<div class="row">
  <div class="col-md-3">
    <%= search_form_for @q, :id => "courses_filters" do |f| %>
    <p class="lead">Filter class search:</p>

    <div class="form-group">
      <%= f.label :name_cont, "Name contains" %>
      <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
    </div>

    <div class="form-group">
      <%= f.label :department_eq, "Department" %>
    </br>
    <%= f.select(:department_eq, options_for_select(@array), :class => "form-control") %>
  </div>

  <div class="form-group">
    <%= f.label :dept_code_cont, "Dept code" %>
    <%= f.text_field :dept_code_cont, :class => "form-control", :placeholder => "Dept code" %>
  </div>

  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/courses" class="btn btn-default btn-block mb-1">Clear filters</a>
  <% end %>
</div>


  <div class="col-md-9 col-offset-3">
    <table class="table table-striped table-hover">
      <tr>
        <th>Department</th>
        <th>Dept code</th>
        <th>Name</th>
      </tr>

      <% @courses.each do |course| %>
      <tr>

        <td><%= course.department %></td>
        <td><%= course.dept_code %></td>
        <td><a href="/courses/<%= course.id %>"><%= course.name %></a></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @courses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
