<div class="page-header">
  <h1>
    Schedules
    <a href="/schedules/new" class="btn btn-md btn-success">Create New Schedule</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @schedules.each do |schedule| %>
      <tr>
        <td>
          <% if schedule.student.present? %>
            <a href="/users/<%= schedule.student.id %>">
              <%= schedule.student.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/schedules/<%= schedule.id %>" class="btn btn-primary">Show</a>

          <% if current_user == schedule.student %>
            <a href="/schedules/<%= schedule.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_schedule/<%= schedule.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @schedules, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
