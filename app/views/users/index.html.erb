<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Major</th>
        <th>Email</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><a href="/users/<%= user.id %>"><%= user.name %></a> </td>
        <td><%= user.major %></td>
        <td><%= user.email %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
