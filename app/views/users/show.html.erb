<div class="page-header">
  <h3><%= @user.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @user.name %></dd>

      <dt>Major</dt>
      <dd><%= @user.major %></dd>

      <dt>Email</dt>
      <dd><%= @user.email %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many schedules -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Schedules
      </li>

      <% @user.schedules.each do |schedule| %>
        <li class="list-group-item">
          <a href="/schedules/<%= schedule.id %>">
            Schedule <%= schedule.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/schedules/<%= schedule.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == schedule.student %>
              <a href="/schedules/<%= schedule.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_schedule/<%= schedule.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
